configuration {
	modes: "window,drun,run,ssh,emoji";
	font: "Font Awesome 12";
	show-icons: false;
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
} 
* {
    font:   "Font Awesome 12";

    bg0:    #0A1124;
    bg1:    #A6896B;

    fg0:    #f35645;
    fg1:    #5f4149;

    text-color:         @fg0;

    margin:     0;
    padding:    0;
    spacing:    0;
}

window {
    background-color:   @bg0;

    location:       center;
    width:          640;
    border:           1;
    border-color:    @fg1;
    padding:          0;
}

inputbar {
    font:       "Font Awesome 12";
    padding:    8px;
    spacing:    8px;
    children:   [entry];
    border:     0px;
}

entry {
    font:   inherit;

    placeholder         : "Search";
    placeholder-color   : @bg1;
    text-color:		 @bg1;
}

textbox {
    padding:    0px 0px;
}

listview {
    lines:      8;
    columns:    1;
    scrollbar: false;

    fixed-height:   false;
    border:         0;
    border-color:   @bg0;
    spacing: 0px;
}

element {
    padding:            8px 8px;
    background-color:   @bg0;
}

element normal.normal{
    text-color: @bg1;
    background-color: transparent;
}

element alternate normal {
    text-color: @bg1;
    background-color: transparent;
}

element selected normal, element selected active {
    background-color:   @bg1;
    text-color:         @bg0;
}

element-text {
    text-color: inherit;
    background-color: inherit;
}
